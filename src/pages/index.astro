    <div class='absolute inset-0 opacity-100 block group-hover:hidden box'></div>
    <div class='absolute inset-0 z-0 flex items-center justify-center'>
      <Fragment set:html={Hero} />
    </div>
    <div id='myBox' class='relative hidden group-hover:flex h-full mx-4 w-full max-w-3xl animate-fade-in-up p-8 items-center'>
      <div class='rounded-lg bg-gray-800 shadow-lg grow'>
        <div class='relative flex h-full w-full flex-col overflow-hidden rounded-lg'>
          <div class='relative z-10 flex h-full flex-col justify-center gap-8 p-8 text-center text-white'>
            <!-- Buttons Section -->
            <div class='fixed top-1 left-0 right-0 max-w-4xl mx-auto grid w-full grid-cols-1 gap-4 sm:grid-cols-4'>
              <a
                id='shoutboxBtn'
                class='flex items-center justify-center rounded-lg bg-gray-700 px-6 py-3 font-medium transition-colors hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'
                href='#'
              >
                Shoutbox
              </a>
              <a
                id='rulesBtn'
                class='flex items-center justify-center rounded-lg bg-gray-700 px-6 py-3 font-medium transition-colors hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'
                href='#'
              >
                Pravidla
              </a>
              <a
                id='infoBtn'
                class='flex items-center justify-center rounded-lg bg-gray-700 px-6 py-3 font-medium transition-colors hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'
                href='#'
              >
                Prikazy
              </a>
              <a
                id='vipBtn'
                class='flex items-center justify-center rounded-lg bg-gray-700 px-6 py-3 font-medium transition-colors hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'
                href='#'
              >
                VIP
              </a>
            </div>

            <!-- Content Sections -->
            <div id='shoutbox' class='space-y-4 hidden'>
              <Shoutbox />
              <p>Vo vyvoji 🔨😊</p>
            </div>
            <div id='rules' class='space-y-4'>
